@model Product

@{
    ViewBag.Title = "Create Product";
}

<form asp-controller="product" asp-action="create" method="post">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" placeholder="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Size" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Size" placeholder="Size" class="form-control">
                <option value="" selected>Please choose</option>

                <option value="small">small</option>
                <option value="medium">medium</option>
                <option value="large">large</option>
            </select>
            <span asp-validation-for="Size"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="UnitPrice" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UnitPrice" placeholder="999.99" class="form-control" />
            <span asp-validation-for="UnitPrice"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" placeholder="Ingredients" class="form-control" />
            <span asp-validation-for="Description"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>
