@model IEnumerable<Customer>

<h1>@ViewBag.Title</h1>

<div class="container">
    <button class="btn-danger"><a asp-controller="customer" asp-action="create">Create New</a></button>
    <div class="card-columns">
        @foreach (var customer in Model)
        {

            <div class="card card-user">
                <img class="card-img-top" src="~/img/avatar.png" alt="Card image" style="width:100%">
                <div class="card-body">
                    <h4 class="card-title">@customer.Name</h4>
                    <p class="card-text">Customer Loyalty Points: 50</p>
                    <a asp-controller="customer" asp-action="details" asp-route-id="@customer.Id">See Profile</a>
                </div>
            </div>
        }
    </div>
</div>



