@model CustomerCreateViewModel

@{
    ViewBag.Title = "Create Customer";
}

<form asp-controller="customer" enctype="multipart/form-data" asp-action="create" method="post">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" placeholder="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" placeholder="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>

    @*<div class="form-group row">
            <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Phone" placeholder="Phone" class="form-control" />
                <span asp-validation-for="Phone"></span>
            </div>
        </div>*@

    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photo" placeholder="Photo" class="form-control custom-file-input" />
                <label class="custom-file-label">Choose File...</label>
            </div>

            <span asp-validation-for="Photo"></span>
        </div>
    </div>

    @section Scripts{
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }

    <button type="submit" class="btn btn-primary">Create</button>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>
