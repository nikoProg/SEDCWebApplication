@model EmployeeDTO

@{
    ViewBag.Title = "Create Employee";
}

<form asp-controller="employee" asp-action="create" method="post">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" placeholder="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" placeholder="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Role" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Role" placeholder="Role" class="form-control" asp-items="Html.GetEnumSelectList<RoleEnum>()">
            </select>
            <span asp-validation-for="Role"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Gender" placeholder="Size" class="form-control">
                <option value="" selected>Please choose</option>

                <option value=null>would rather not say</option>
                <option value="M">Male</option>
                <option value="Z">Female</option>
            </select>
            <span asp-validation-for="Gender"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="DateOfBirth" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="date" asp-for="DateOfBirth" class="form-control" />
            <span asp-validation-for="DateOfBirth"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>
