@model IEnumerable<Employee>

<h1>@ViewBag.Title</h1>

<div class="container">
    <button class="btn-danger"><a asp-controller="employee" asp-action="create">Create New</a></button>
    <div class="card-columns">
        @foreach (var employee in Model)
        {

            <div class="card card-user">
                <img class="card-img-top" src="~/img/avatar.png" alt="Card image" style="width:100%">
                <div class="card-body">
                    <h4 class="card-title">@employee.Name</h4>
                    <p class="card-text">Some example text some example text. John Doe is an architect and engineer</p>
                    <a asp-controller="employee" asp-action="details" asp-route-id="@employee.Id">See Profile</a>
                </div>
            </div>
        }
    </div>
</div>



